{
  "compilerOptions": {
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@css/*": ["css/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@views/*": ["views/*"]
    }
  }
}
